<Window x:Class="FxHabit.CyberMessageBox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="CyberMessageBox" Height="220" Width="450"
        WindowStyle="None" AllowsTransparency="True" Background="Transparent"
        WindowStartupLocation="CenterScreen" ShowInTaskbar="False" Topmost="True">

    <Border Background="#0A0A0A" BorderBrush="Cyan" BorderThickness="1" CornerRadius="2">
        <Border.Effect>
            <DropShadowEffect BlurRadius="15" Color="Cyan" Opacity="0.3" ShadowDepth="0"/>
        </Border.Effect>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="30"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="60"/>
            </Grid.RowDefinitions>

            <Border Grid.Row="0" Background="#111">
                <TextBlock x:Name="TxtTitle" Text="CONFIRMATION SYSTÈME" Foreground="Cyan" 
                           FontSize="10" FontWeight="Black" VerticalAlignment="Center" Margin="15,0"/>
            </Border>

            <StackPanel Grid.Row="1" Orientation="Horizontal" VerticalAlignment="Center" Margin="25,10">
                <materialDesign:PackIcon x:Name="IconAlert" Kind="AlertDecagram" 
                                         Foreground="#FF4444" Width="40" Height="40" VerticalAlignment="Center"/>
                <TextBlock x:Name="TxtMessage" Text="Voulez-vous vraiment supprimer cet élément ?" 
                           Foreground="White" FontSize="14" TextWrapping="Wrap" 
                           MaxWidth="320" Margin="20,0,0,0" VerticalAlignment="Center"/>
            </StackPanel>

            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,0,20,0">
                <Button x:Name="BtnCancel" Content="ANNULER" Click="Cancel_Click" 
                        Background="Transparent" BorderThickness="0" Foreground="Gray" Width="100" Margin="0,0,10,0"/>
                <Button x:Name="BtnConfirm" Content="CONFIRMER" Click="Confirm_Click" 
                        Style="{StaticResource CyberButton}" Width="140" Height="35" FontWeight="Bold"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>