<UserControl x:Class="FxHabit.HabitCard"
              xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FxHabit"
             mc:Ignorable="d" 
             >
    <Border Style="{StaticResource GlassCard}" Height="80" Width="240">
        <Grid Margin="15,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <Border Width="40" Height="40" CornerRadius="10" Background="#10FFFFFF">
                <TextBlock Text="{Binding Icon}" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="20"/>
            </Border>

            <StackPanel Grid.Column="1" VerticalAlignment="Center" Margin="15,0">
                <TextBlock Text="{Binding Title}" Foreground="White" FontWeight="SemiBold" FontSize="14"/>
                <TextBlock Text="{Binding CurrentStreakStr}" Foreground="{StaticResource NeonCyan}" FontSize="11" Opacity="0.8"/>
            </StackPanel>

            <CheckBox Grid.Column="2" Style="{StaticResource NeonCheckBox}"/>
        </Grid>
    </Border>
</UserControl>